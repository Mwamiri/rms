{
  "name": "mwamiri/rms-athletics",
  "description": "Athletics Federation Results Management System - Complete event management solution",
  "type": "project",
  "keywords": [
    "athletics",
    "sports-management",
    "results-tracking",
    "event-management",
    "php",
    "mysql",
    "mvc"
  ],
  "homepage": "https://github.com/Mwamiri/rms",
  "license": "MIT",
  "authors": [
    {
      "name": "Mwamiri",
      "email": "mwamiri@github.com",
      "homepage": "https://github.com/Mwamiri",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.1",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-mysqli": "*",
    "ext-json": "*",
    "ext-gd": "*",
    "ext-zip": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0"
  },
  "suggest": {
    "ext-curl": "For external API requests",
    "ext-openssl": "For HTTPS support",
    "ext-mbstring": "For better string handling"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "App\\Controllers\\": "app/controllers/",
      "App\\Models\\": "app/models/",
      "App\\Services\\": "app/services/",
      "App\\Helpers\\": "app/helpers/"
    },
    "files": [
      "app/helpers/ViewHelper.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"if (!file_exists('.env')) { copy('.env.production', '.env'); }\""
    ],
    "post-update-cmd": [
      "@php -r \"echo 'RMS Athletics System updated successfully!\\n';\""
    ],
    "install-db": [
      "@php installer/index.php"
    ],
    "backup": [
      "@php -r \"require 'app/services/BackupService.php'; (new BackupService())->createBackup();\""
    ],
    "test": [
      "phpunit"
    ],
    "serve": [
      "@php -S localhost:8000 -t public/"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "platform": {
      "php": "8.1"
    }
  },
  "extra": {
    "rms": {
      "version": "1.0.0",
      "features": {
        "events": true,
        "athletes": true,
        "results": true,
        "rankings": true,
        "imports": true,
        "registrations": true,
        "backups": true,
        "reports": true
      },
      "deployment": {
        "target": "cloud-vps-10",
        "platform": "coolify",
        "docker": true
      }
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
