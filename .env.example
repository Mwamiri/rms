APP_NAME="Athletics Federation Management System"
APP_URL=http://localhost
APP_KEY=base64:changeme
APP_DEBUG=false
APP_ENV=production

DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=rms_db
DB_USERNAME=rms_user
DB_PASSWORD=secure_password_change_me
DB_ROOT_PASSWORD=root_password_change_me

# phpMyAdmin Port (change if 8080 is already in use, e.g., 8081, 9090)
PHPMYADMIN_PORT=8080

# PHP Configuration
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M

# Application Features
FEATURES_EVENTS=true
FEATURES_ATHLETES=true
FEATURES_RESULTS=true
FEATURES_REPORTS=true
FEATURES_BACKUPS=true
FEATURES_RANKINGS=true

# File Upload Settings
MAX_FILE_SIZE=32M
ALLOWED_EXTENSIONS=csv,xlsx,xls

# Backup Settings
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION=30

TIMEZONE=UTC
