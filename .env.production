# Production Environment for Cloud VPS 10
# Copy this to .env in your production environment

# Application Settings
APP_URL=https://yourdomain.com
APP_DEBUG=false
APP_KEY=base64:generateRandomKeyHere32Characters
APP_ENV=production

# Database Configuration - Coolify MySQL Service
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=rms_db
DB_USERNAME=rms_user
DB_PASSWORD=your_secure_database_password_here
DB_ROOT_PASSWORD=your_secure_root_password_here

# Cloud VPS 10 Optimized Settings
# These settings are tuned for 4-8GB RAM and 2-4 vCores

# PHP Configuration (will be set in container)
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M

# MySQL Optimization for Cloud VPS 10
MYSQL_INNODB_BUFFER_POOL_SIZE=1G
MYSQL_MAX_CONNECTIONS=200

# Application Features
FEATURES_EVENTS=true
FEATURES_ATHLETES=true
FEATURES_RESULTS=true
FEATURES_REPORTS=true
FEATURES_BACKUPS=true
FEATURES_RANKINGS=true

# File Upload Settings
MAX_FILE_SIZE=32M
ALLOWED_EXTENSIONS=csv,xlsx,xls

# Backup Settings
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION=30

# Security Settings (for Cloud VPS)
SESSION_LIFETIME=120
CSRF_TOKEN_LIFETIME=3600

# Email Settings (if using SMTP)
MAIL_DRIVER=smtp
MAIL_HOST=your-smtp-server.com
MAIL_PORT=587
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls

# Timezone
APP_TIMEZONE=UTC